alias reload='source ~/.bashrc'  # reload ~/.bashrc

alias sampler="sampler --config ~/.config/sampler/config.yml "

alias c='clear && source ~/.bashrc'     # Clear and reload

alias docker=podman

alias cat="bat -p"
alias cp="cp -i"    # confirm before overwriting something
alias ls='exa' # Replacement for ls
alias bat="bat -p"    # cat with syntax highlighting

alias df='df -h'

alias free='free -h'
alias np='nano -w PKGBUILD'
alias more=less

alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'

alias a2path='echo "export PATH=$PWD:\$PATH" >> ~/.bashrc'    # Add current folder to path
alias ping='ping -c 4'    # Ping only 4 times
alias gh='history | grep ' # Grep history
alias myip='dig +short myip.opendns.com @resolver1.opendns.com -4' # Get Public IP

## Video Downloader ## 
alias ydl='youtube-dl --embed-thumbnail -o "./%(title)s.%(ext)s"'
# Video
alias y1080='youtube-dl -f "bestvideo[height<=1080]+bestaudio/best[height<=1080]" --no-playlist -o "~/Videos/%(uploader)s/%(title)s.%(ext)s"'
alias yhd='youtube-dl  -f "bestvideo[height<=720]+bestaudio/best[height<=720]"    --no-playlist -o "~/Videos/%(uploader)s/%(title)s.%(ext)s"'
# Audio
alias ymp3='youtube-dl --embed-thumbnail --no-playlist -x --audio-format mp3 -o "~/Music/%(uploader)s/%(title)s.%(ext)s"'

# Video Playlist
alias ypl='youtube-dl   -f "bestvideo[height<=720]+bestaudio/best[height<=720]"   --no-playlist -o "~/Videos/%(uploader)s/%(playlist)s/%(title)s.%(ext)s"'
# Audio Playlist
alias ypl3='youtube-dl   -f "bestvideo[height<=720]+bestaudio/best[height<=720]" -x --audio-format mp3 --no-playlist -o "~/Audio/%(uploader)s/%(playlist)s/%(title)s.%(ext)s"'

## Local Server
alias rbsrv='ruby -run -ehttpd . -p '
alias pysrv='python3 -m http.server'
